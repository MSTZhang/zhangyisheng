	<script type="text/javascript">
		$(document).ready(function(){
			//获取登录信息
			var url1 = "http://localhost:8080/springmvcDemo1/loginInfo";
			var response = ajaxGet(url1,false);
			if(response!=null){
				var status = response.meta.success;
				if(status){
					var url2="http://localhost:8081/readFile?filename=views/ejsTemplate/userInfo.ejs";
					var res = ajaxGet(url2,false);
					if(res!==null){
						console.log(response.data);
						var html =ejs.render(res,{"data":response.data});
				 		$("body").html(html);
					}else{
						window.location.href="login";
					}
				}else{
					window.location.href="login";
				}
			}else{
				window.location.href="error";
			}
		});
